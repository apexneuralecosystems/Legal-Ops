# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# DATABASE (REQUIRED)
# ============================================
# PostgreSQL connection string for production
DATABASE_URL=postgresql://user:password@db.your-server.com:5432/law_agent_db
DB_HOST=db.your-server.com
DB_PORT=5432
DB_NAME=law_agent_db
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# ============================================
# GOOGLE GEMINI API (REQUIRED)
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_production_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# SECURITY (REQUIRED - Generate new keys!)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate_a_new_64_char_hex_string_here
JWT_SECRET_KEY=generate_another_64_char_hex_string_here
ALGORITHM=HS256
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS (REQUIRED - Add your production domains)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://legalops.apexneural.cloud
# Set to true ONLY for development/testing
CORS_ALLOW_ALL=false

# ============================================
# OCR CONFIGURATION
# ============================================
# Options: auto, tesseract, pymupdf, google_vision
OCR_ENGINE=auto
# Leave empty for auto-detection, or set explicit path
TESSERACT_CMD=
# Languages for OCR (eng=English, msa=Malay)
OCR_LANGUAGES=eng+msa
# Optional: Google Cloud Vision API key for cloud OCR
GOOGLE_VISION_API_KEY=

# ============================================
# TRANSLATION (Uses Gemini - no extra config needed)
# ============================================
TRANSLATION_SERVICE=gemini

# ============================================
# FILE STORAGE
# ============================================
STORAGE_TYPE=local
# Use absolute path in production
UPLOAD_DIR=/var/www/legal-ops/uploads
MAX_UPLOAD_SIZE=52428800

# ============================================
# REDIS (Required for Celery/caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
# Use absolute path in production
LOG_FILE=/var/log/legal-ops/app.log

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_LIVE_TRANSCRIPTION=false
ENABLE_FULL_TEXT_LOGGING=false
ENABLE_PII_REDACTION=true

# ============================================
# LEGAL DATABASE
# ============================================
CASELAW_DB_TYPE=commonlii
USE_COMMONLII=true
CASELAW_API_URL=
CASELAW_API_KEY=

# ============================================
# PAYPAL (Optional - for payments)
# ============================================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
# Options: sandbox, live
PAYPAL_MODE=live

# ============================================
# SENDGRID (Optional - for emails)
# ============================================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# ============================================
# FRONTEND CONFIGURATION (REQUIRED)
# ============================================
FRONTEND_URL=https://legalops.apexneural.cloud
# Optional: Explicit password reset URL (defaults to FRONTEND_URL/reset-password)
FRONTEND_RESET_URL=https://legalops.apexneural.cloud/reset-password

# ============================================
# BACKEND SERVER CONFIGURATION
# ============================================
BACKEND_PORT=8091

# ============================================
# GOOGLE CLOUD (Optional - for Gmail/Drive)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://legalops.apexneural.cloud/auth/google/callback
