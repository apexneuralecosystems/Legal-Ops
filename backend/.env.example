# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@127.0.0.1:5432/law_agent_db
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=law_agent_db
DB_USER=postgres
DB_PASSWORD=YOUR_PASSWORD

# Google Gemini API (REQUIRED - Used for LLM and Translation)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Google Cloud (for email/drive connectors - OPTIONAL)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Translation Configuration (Uses Gemini API - No additional key needed)
TRANSLATION_SERVICE=gemini

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# Redis (for caching and Celery - OPTIONAL)
REDIS_URL=redis://localhost:6379/0

# Security (Generate a new secret key for production)
# Run: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT Configuration
JWT_SECRET_KEY=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Feature Flags
ENABLE_LIVE_TRANSCRIPTION=false
ENABLE_FULL_TEXT_LOGGING=false
ENABLE_PII_REDACTION=true

# OCR Configuration
# Options: auto, tesseract, pymupdf, google_vision
OCR_ENGINE=auto
# Leave empty for auto-detection (recommended)
TESSERACT_CMD=
OCR_LANGUAGES=eng+msa
# Optional: Google Cloud Vision API key
GOOGLE_VISION_API_KEY=

# Legal Database
CASELAW_DB_TYPE=commonlii
USE_COMMONLII=true
CASELAW_API_URL=
CASELAW_API_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8006,http://127.0.0.1:8006
# Set to true for development convenience (allows all origins)
CORS_ALLOW_ALL=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# PayPal (OPTIONAL)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# SendGrid (OPTIONAL)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@example.com
